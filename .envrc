use_uv() {
  # Default .venv path (adjust if you use a different one)
  local venv=".venv"

  if [[ -d "$venv" ]]; then
    export VIRTUAL_ENV="$venv"
    export PATH="$VIRTUAL_ENV/bin:$PATH"
  else
    echo "To install, run 'make install-uv'"
    echo "uv virtual environment not found. Did you run 'uv venv', then run 'uv sync'?"
  fi
}

use_uv

# Load environment variables from .env file (VSCode does this automatically too)
export $(grep -v '^#' .env | xargs -d '\n')
echo "Loaded .env and activated uv environment"
