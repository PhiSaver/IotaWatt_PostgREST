# PostgreSQL Database Configuration - TEMPLATE
# Copy this file to .env and update with your actual values
# Generate secure passwords with: openssl rand -base64 16
# Generate JWT secret with: openssl rand -base64 32

# PostgreSQL Database Configuration
POSTGRES_USER=phisaver_user
POSTGRES_PASSWORD=your_secure_password_here_16_chars_min
POSTGRES_DB=phisaver

# PostgREST Configuration
PGRST_DB_SCHEMA=public
PGRST_DB_ANON_ROLE=web_anon
PGRST_JWT_SECRET=your_jwt_secret_key_here_32_chars_minimum_for_security
PGRST_ROLE_CLAIM_KEY=.role

# Database connection for PostgREST (authenticator user)
PGRST_DB_USER=authenticator
PGRST_DB_PASSWORD=your_authenticator_password_here_16_chars_min

# Port Configuration
POSTGRES_EXTERNAL_PORT=5433
POSTGREST_EXTERNAL_PORT=3001
