# PostgreSQL Database Configuration - TEMPLATE
# Copy this file to .env and update with your actual values
# Generate secure passwords with: openssl rand -base64 16
# Generate JWT secret with: openssl rand -base64 32

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=phisaver

# Port Configuration
# The underlying pg database
POSTGRES_EXTERNAL_PORT=3332
# Expose the PostgREST API
POSTGREST_EXTERNAL_PORT=3333

# Database Roles
PG_READER_USER=reader
PG_WRITER_USER=writer
PG_READER_PASSWORD=CHANGE_ME
PG_WRITER_PASSWORD=CHANGE_ME

# PostgREST Configuration
PGRST_DB_SCHEMA=public
PGRST_JWT_SECRET=CHANGE_ME
PGRST_ROLE_CLAIM_KEY=.role

# Database connection for PostgREST (authenticator user)
PGRST_DB_USER=postgrest
PGRST_DB_PASSWORD=CHANGE_ME

# IoTaWatt Configuration
IOTAWATT_SCHEMA=public
IOTAWATT_TABLE=iotawatt

# Deployment
# local and remote, no slash to start
DEPLOY_DIR=deploy/iotawatt-postgrest

SSH=your-server.example.com

